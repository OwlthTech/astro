---
interface Props {
  categoryShort: string;
  categoryLong: string;
  categoryLink: string;
  categorySubheading?: string;
  categoryImage: string;
  categoryIcon?: string;
}

const {
  categoryShort,
  categoryLong,
  categorySubheading,
  categoryImage,
  categoryIcon,
  categoryLink,
} = Astro.props;
---

<a class="group relative block" href={categoryLink}>
  <div
    class="flex-shrink-0 shadow-lg duration-300 ease-in-out hover:shadow-2xl relative w-full rounded-xl overflow-hidden h-[350px] before:absolute before:inset-x-0 before:w-full before:h-full before:bg-gradient-to-t before:from-primary before:to-prim-accent-light/30 before:z-[1]"
  >
    <img
      alt="Image Description"
      class="w-full h-full absolute top-0 left-0 object-cover"
      src={categoryImage}
    />
  </div>
  <div class="absolute top-0 inset-x-0 z-10">
    <div class="p-4 flex flex-col h-full sm:p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <img
            alt="Image Description"
            class="h-[2.875rem] w-[2.875rem] border-2 border-prim-accent-dark shadow-lg rounded-full"
            src={categoryIcon
              ? categoryIcon
              : "https://images.unsplash.com/photo-1669837401587-f9a4cfe3126e?ixlib=rb-4.0.3&amp;ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&amp;auto=format&amp;fit=facearea&amp;facepad=2&amp;w=320&amp;h=320&amp;q=80"}
          />
        </div>
        <div class="ml-2.5 sm:ml-4">
          <h2 class="text-lg font-semibold text-white">
            {categoryShort}
          </h2>
        </div>
      </div>
    </div>
  </div>
  <div class="absolute bottom-0 inset-x-0 z-10">
    <div class="flex flex-col h-full p-4 sm:p-6">
      <h3
        class="text-lg sm:text-3xl font-semibold text-white group-hover:text-white/[.8]"
      >
        {categoryLong}
      </h3>
      <p class="mt-2 text-prim-accent-dark">
        {categorySubheading}
      </p>
    </div>
  </div>
</a>
